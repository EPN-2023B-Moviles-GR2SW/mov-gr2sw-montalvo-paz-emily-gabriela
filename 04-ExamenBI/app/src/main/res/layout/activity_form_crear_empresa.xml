<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormCrearEmpresa">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="GESTIÓN DE EMPRESAS"
        android:textColor="#00000F"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/imput_telefono_empresa"
        android:layout_width="267dp"
        android:layout_height="42dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Numero de celular"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/imput_estado_empresa"
        app:layout_constraintEnd_toEndOf="@+id/imput_estado_empresa"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imput_estado_empresa" />

    <EditText
        android:id="@+id/imput_estado_empresa"
        android:layout_width="268dp"
        android:layout_height="41dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Estado"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_categoria_empresa"
        app:layout_constraintEnd_toEndOf="@+id/input_categoria_empresa"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_categoria_empresa" />

    <EditText
        android:id="@+id/imput_nombre_empresa"
        android:layout_width="267dp"
        android:layout_height="41dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Nombre de la empresa"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/imput_telefono_empresa"
        app:layout_constraintEnd_toEndOf="@+id/imput_telefono_empresa"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imput_telefono_empresa" />

    <EditText
        android:id="@+id/input_categoria_empresa"
        android:layout_width="269dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Categoría "
        android:inputType="text"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="420dp" />

    <Button
        android:id="@+id/btn_guardar_empresa"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:layout_marginBottom="172dp"
        android:backgroundTint="#00BCD4"
        android:text="GUARDAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancelar_empresa"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_cancelar_empresa"
        android:layout_width="149dp"
        android:layout_height="37dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="172dp"
        android:backgroundTint="#00BCD4"
        android:text="CANCELAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>