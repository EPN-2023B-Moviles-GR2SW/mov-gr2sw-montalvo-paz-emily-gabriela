<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormAgregarEmpleado">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="GESTIÓN DE EMPLEADOS"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_nombre_empleado"
        android:layout_width="257dp"
        android:layout_height="46dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Nombre "
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_apellido_empleado"
        app:layout_constraintEnd_toEndOf="@+id/input_apellido_empleado"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/input_apellido_empleado"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/input_apellido_empleado"
        android:layout_width="258dp"
        android:layout_height="52dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Apellido"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_edad_empleado"
        app:layout_constraintEnd_toEndOf="@+id/input_edad_empleado"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/input_edad_empleado" />

    <EditText
        android:id="@+id/input_edad_empleado"
        android:layout_width="255dp"
        android:layout_height="49dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Edad"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_jornada_empleado"
        app:layout_constraintEnd_toEndOf="@+id/input_jornada_empleado"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_jornada_empleado" />

    <EditText
        android:id="@+id/input_jornada_empleado"
        android:layout_width="255dp"
        android:layout_height="48dp"
        android:layout_marginBottom="244dp"
        android:ems="10"
        android:hint="¿Tiempo Completo?"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_guardar_empleado"
        android:layout_width="115dp"
        android:layout_height="66dp"
        android:layout_marginBottom="116dp"
        android:backgroundTint="#00BCD4"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_calcelar_empleado"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_calcelar_empleado"
        android:layout_width="124dp"
        android:layout_height="68dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="112dp"
        android:backgroundTint="#00BCD4"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>